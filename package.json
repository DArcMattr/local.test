{
  "author": "David Arceneaux <david@davidthemachine.org>",
  "license": "BSD-2-Clause",
  "name": "local.test",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DArcMattr/local.test"
  },
  "version": "1.0.0",
  "description": "",
  "main": "htdocs/js/main.js",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/runtime": "^7.12.18",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.0.0",
    "eslint": "^7.20.0",
    "eslint-config-jquery": "^3.0.0",
    "stylelint": "^13.11.0",
    "stylelint-config-recommended": "^3.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended"
    ]
  },
  "browserslist": [
    "> 1%"
  ],
  "browser-sync": {
    "cors": true,
    "files": [
      "./htdocs/**/*.css",
      "./htdocs/**/*.html",
      "./htdocs/**/*.js",
      "./htdocs/**/*.php"
    ],
    "ghostMode": false,
    "https": {
      "key": "./tls/local.test-key.pem",
      "cert": "./tls/local.test.pem"
    },
    "minify": false,
    "notify": true,
    "open": false,
    "reloadDebounce": 500,
    "reloadOnRestart": true,
    "watchOptions": {
      "ignoreInitial": true
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "jquery": true,
      "es2017": true,
      "browser": true
    },
    "extends": [
      "jquery"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    }
  },
  "scripts": {
    "bsync": "browser-sync start --host ${BROWSERSYNC_HOST} --proxy https://${BROWSERSYNC_HOST}",
    "build": "webpack",
    "postinstall": "npm run build",
    "lint": "npm run lint:style && npm run lint:js",
    "lint:style": "stylelint htdocs/style/**/*.css",
    "lint:js": "eslint js/**/*.{,m}js",
    "start": "concurrently 'NODE_ENV=development npm run build --watch' 'npm run bsync'"
  }
}

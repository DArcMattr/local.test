{
  "author": "David Arceneaux <david@davidthemachine.org>",
  "license": "BSD-2-Clause",
  "name": "local.test",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DArcMattr/local.test"
  },
  "version": "1.0.0",
  "description": "",
  "main": "htdocs/js/main.js",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-jquery": "^3.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "webpack": "^5.0.0-rc.6",
    "webpack-cli": "^3.3.12"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended"
    ]
  },
  "browserslist": [
    "> 1%"
  ],
  "browser-sync": {
    "cors": true,
    "files": [
      "./htdocs/**/*.css",
      "./htdocs/**/*.html",
      "./htdocs/**/*.js",
      "./htdocs/**/*.php"
    ],
    "ghostMode": false,
    "https": {
      "key": "./tls/local.test-key.pem",
      "cert": "./tls/local.test.pem"
    },
    "minify": false,
    "notify": true,
    "open": false,
    "reloadDebounce": 500,
    "reloadOnRestart": true,
    "watchOptions": {
      "ignoreInitial": true
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "jquery": true,
      "es2017": true,
      "browser": true
    },
    "extends": [
      "jquery"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    }
  },
  "scripts": {
    "bsync": "browser-sync start --host ${BROWSERSYNC_HOST} --proxy https://${BROWSERSYNC_HOST}",
    "build": "npm run script -- --mode production",
    "lint": "npm run lint:style && npm run lint:js",
    "lint:style": "stylelint htdocs/style/**/*.css",
    "lint:js": "eslint js/**/*.{,m}js",
    "script": "webpack",
    "watch": "concurrently 'npm run script -- --watch --mode ${NODE_ENV}' 'npm run bsync'"
  }
}
